<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFD200"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Logo de l'application -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="Logo"
            android:layout_marginBottom="16dp" />

        <!-- Message de confirmation -->
        <TextView
            android:id="@+id/confirmationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commande confirmée !"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Détails de la commande -->
        <TextView
            android:id="@+id/detailsCommande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp" />

        <!-- RecyclerView pour les commandes passées -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCommandes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Bouton refaire une commande -->
        <Button
            android:id="@+id/btnNouvelleCommande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nouvelle commande"
            android:textColor="#000000"
            android:backgroundTint="#FFFFFF"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />
    </LinearLayout>
</ScrollView>
